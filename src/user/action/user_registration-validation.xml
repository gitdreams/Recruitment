<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>

	<field name="user.email">
		<field-validator type="email">
			<message>邮箱格式错误</message>
		</field-validator>
	</field>

	<field name="user.username">
		<field-validator type="requiredstring">
			<message>你的用户名为空</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">3</param>
			<message>用户名至少三个字符，您现在有${user.username.length()}</message>
		</field-validator>
	</field>

	<field name="user.password">
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">3</param>
			<message>密码至少3个字符，现在有${user.password.length()}</message>
		</field-validator>
		<field-validator type="fieldexpression">
			<param name="expression">user.password.equals(repass)</param>
			<message>两次输入密码不一致</message>
		</field-validator>
	</field>


</validators>